{
  "compilerOptions": {
    "target": "ES2017", // Specify the target JavaScript version (e.g., ES5, ES6, etc.)
    "module": "ES6", // Specify the module system (e.g., CommonJS, ES6, etc.)
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility with ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "outDir": "./dist", // Specify the output directory for compiled files
    "rootDir": "./src", // Specify the root directory of your TypeScript files
    "sourceMap": true, // Generate source maps for debugging
    "noEmit": false
  },
  "include": ["src/**/*"], // Include all files in the `src` directory
  "exclude": ["node_modules", "dist"] // Exclude the `node_modules` directory
}
